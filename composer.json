{
    "name": "hyperf-glory/task-schedule",
    "description": "基于Hyperf开发的任务调度系统",
    "type": "project",
    "authors": [
        {
            "name": "he ping",
            "email": "847050412@qq.com"
        }
    ],
    "require": {
        "php": ">=7.3",
        "ext-dom": "*",
        "ext-json": "*",
        "ext-pdo": "*",
        "ext-redis": "*",
        "ext-swoole": ">=4.6",
        "ext-zip": "*",
        "codedungeon/php-cli-colors": "^1.12",
        "hashids/hashids": "^4.1",
        "hyperf/amqp": "2.1.*",
        "hyperf/async-queue": "2.1.*",
        "hyperf/cache": "2.1.*",
        "hyperf/command": "2.1.*",
        "hyperf/config": "2.1.*",
        "hyperf/constants": "2.1.*",
        "hyperf/dag-incubator": "^0.1.1",
        "hyperf/database": "2.1.*",
        "hyperf/db-connection": "2.1.*",
        "hyperf/engine": "^1.0",
        "hyperf/filesystem": "2.1.*",
        "hyperf/framework": "2.1.*",
        "hyperf/guzzle": "2.1.*",
        "hyperf/http-server": "2.1.*",
        "hyperf/logger": "2.1.*",
        "hyperf/memory": "2.1.*",
        "hyperf/model-cache": "2.1.*",
        "hyperf/nsq": "^2.1",
        "hyperf/process": "2.1.*",
        "hyperf/rate-limit": "2.1.*",
        "hyperf/redis": "2.1.*",
        "hyperf/task": "2.1.*",
        "hyperf/tracer": "2.1.*",
        "hyperf/view": "^2.1",
        "hyperf/view-engine": "2.1.*",
        "jeremeamia/superclosure": "^2.4",
      "ext-sockets": "*"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "swoole/ide-helper": "^4.5",
        "friendsofphp/php-cs-fixer": "^2.14",
        "mockery/mockery": "^1.0",
        "phpstan/phpstan": "^0.12",
        "hyperf/devtool": "2.1.*",
        "hyperf/testing": "2.1.*",
        "symfony/var-dumper": "^5.1"
    },
    "suggest": {
        "ext-openssl": "Required to use HTTPS.",
        "ext-json": "Required to use JSON.",
        "ext-pdo": "Required to use MySQL Client.",
        "ext-pdo_mysql": "Required to use MySQL Client.",
        "ext-redis": "Required to use Redis Client."
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\": "./test/"
        },
        "files": [
            "./app/Kernel/Functions.php"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "extra": [],
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-autoload-dump": [
            "rm -rf runtime/container"
        ],
        "test": "co-phpunit -c phpunit.xml --colors=always",
        "cs-fix": "php-cs-fixer fix $1",
        "analyse": "phpstan analyse --memory-limit 300M -l 0 -c phpstan.neon ./app ./config",
        "start": "php ./bin/hyperf.php start"
    }
}
